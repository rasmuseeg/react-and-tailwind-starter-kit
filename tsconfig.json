{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2015",
      "es2015.collection"
    ],
    // "incremental": true, // Faster builds, but there may be side-effects!
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src",
    ".storybook"
  ],
  "exclude": [
    "node_modules",
    "storybook-static",
    "SpaServer",
    "build",
    "scripts"
  ]
}
